@model sistemaMatricula.Models.aluno

@{
    ViewBag.Title = "Delete";
}

    <style>
        .dados{
            font-size: 20px;
        }
    </style>
    <br />

<h3>Tem certeza que deseja remover?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Aluno:
            <b class="dados">
                @Html.DisplayFor(model => model.nomeAluno)
            </b>
        </dt>
        <br />

        <dt>
            Cpf do Aluno:
            <b class="dados">
                @Html.DisplayFor(model => model.cpfAluno)
            </b>
        </dt>
        <br />

        <dt>
            Matrícula:
            <b class="dados">
                @Html.DisplayFor(model => model.matricula)
            </b>
        </dt>
        <br />

        <dt>
            Turma:
            <b class="dados">
                @Html.DisplayFor(model => model.turma.nome)
            </b>
        </dt>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Retornar", "Index")
        </div>
    }
</div>
