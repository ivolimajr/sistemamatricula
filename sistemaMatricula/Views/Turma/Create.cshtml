@model sistemaMatricula.Models.turma

@{
    ViewBag.Title = "Create";
}

<style>
    .body {
        color: black;
    }

    #fundobotao {
        background-color: rgb(255, 255, 255,0.3);
    }

    .col {
        width: 300px;
    }
</style>

<br />
<h2 style="text-align:center">Inserir Nova Turma</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-5 offset-md-3"></div>
            <div class="col-md-4 offset-md-4" id="fundobotao">
                <br />
                <div class="form-group">
                    <b>
                        @Html.LabelFor(model => model.disciplina_id, "Disciplina", htmlAttributes: new { @class = "control-label col-md-2" })
                    </b>
                    <div class="col-md-10">
                        @Html.DropDownList("disciplina_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.disciplina_id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <b>
                        @Html.LabelFor(model => model.funcionario_id, "Funcionário", htmlAttributes: new { @class = "control-label col-md-2" })
                    </b>
                    <div class="col-md-10">
                        @Html.DropDownList("funcionario_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.funcionario_id, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    <b>
                        @Html.LabelFor(model => model.nome, "Nome da Turma", htmlAttributes: new { @class = "control-label col-md-8" })
                    </b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <b>
                        @Html.LabelFor(model => model.sala, "Sala", htmlAttributes: new { @class = "control-label col-md-2" })
                    </b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.sala, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.sala, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-2"></div>
                        <div class="col">

                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Cadastrar Turma" class="btn btn-success btn-lg btn-block" />
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4"></div>
        </div>

    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
