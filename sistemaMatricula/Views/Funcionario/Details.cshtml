@model sistemaMatricula.Models.funcionario

@{
    ViewBag.Title = "Details";
}


<style>
    .dados {
        font-size: 20px;
    }
    .dl-horizontal {
        background-color: rgb(255, 255, 255,0.3);
        padding-left: 20px;
    }
</style>

<br />
<h2 style="text-align:center">Dados do Funcionário</h2>

<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Disciplina:
            <b class="dados">
                @Html.DisplayFor(model => model.nome)
            </b>
        </dt>
        <br />

        <dt>
            Descrição:
            <b class="dados">
                @Html.DisplayFor(model => model.descricao)
            </b>
        </dt>
        <br />

        <dt>
            Data Admissão:
            <b class="dados">
                @{ 
                    DateTime admissao = Convert.ToDateTime(Model.dataAdmissao);

                }
                @admissao.ToString("dd/MM/yyyy")
            </b>
        </dt>
        <br />

        <dt>
            Data Saída:
            <b class="dados">
                @{ 
                    string dataSaida = String.Empty;
                    if(Model.dataDemissao == null)
                    {
                        dataSaida = "Ainda Ativo";
                    } else
                    {
                        DateTime saida = Convert.ToDateTime(Model.dataDemissao);                
                        dataSaida = saida.ToString("dd/MM/yyyy");
                    }
                }
                @dataSaida
            </b>
        </dt>
        <br />

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.id }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Retornar", "Index", null, new { @class = "btn btn-light" })
</p>
