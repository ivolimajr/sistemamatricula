@model sistemaMatricula.Models.usuario

@{
    ViewBag.Title = "Details";
    if (Session["UserId"] == null)
    {
        Response.Redirect("~/home/login");
    }
}

<style>
    .dados {
        font-size: 20px;
    }

    .dl-horizontal {
        background-color: rgb(255, 255, 255,0.3);
        padding-left: 20px;
    }
</style>

<br />
<h2 style="text-align:center">Detalhes</h2>

<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Nome:
            <b class="dados">
                @Html.DisplayFor(model => model.funcionario.nome)
            </b>
        </dt>
        <br />

        <dt>
            Login:
            <b class="dados">
                @Html.DisplayFor(model => model.login)
            </b>
        </dt>
        <br />


        <dt>
            Situação:
            <b class="dados">
                @Html.DisplayFor(model => model.situacao)
            </b>
        </dt>
        <br />

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.id }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Retornar", "Index", null, new { @class = "btn btn-light" })
</p>
