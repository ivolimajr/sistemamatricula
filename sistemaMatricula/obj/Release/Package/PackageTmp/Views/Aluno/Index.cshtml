@model IEnumerable<sistemaMatricula.Models.aluno>

@{
    ViewBag.Title = "Index";
    if (Session["UserId"] == null)
    {
        Response.Redirect("~/home/login");
    }
}
    <style>
        .row {
            background-color: rgb(255, 255, 255,0.3);
        }

        .table {
            background-color: rgb(255, 255, 255,0.3);
            color: black;
        }
    </style>
<br />
<h2>Meus Alunos</h2>


<p>
    <h3 style="text-align:center"> @Html.ActionLink("ADICIONAR", "Create", null, new { @class = "btn btn-light" })</h3>
</p>
<table class="table">
    <tr>
        <th>
            Aluno
        </th>
        <th>
            Matrícula
        </th>
        <th>
            Data da Matrícula
        </th>
        <th>
            Turma
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.nomeAluno)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.matricula)
    </td>
    <td>
        @{
            DateTime dataSaida = Convert.ToDateTime(item.dataMatricula.ToString());
        }
        @Html.DisplayFor(modelItem => item.dataMatricula)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.turma.nome)
    </td>
    <td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
        @Html.ActionLink("Detalhes", "Details", new { id = item.id }) |
        @Html.ActionLink("Remover", "Delete", new { id = item.id })
    </td>
</tr>
    }

</table>
