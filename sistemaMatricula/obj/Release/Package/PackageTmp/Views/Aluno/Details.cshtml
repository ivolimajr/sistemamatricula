@model sistemaMatricula.Models.aluno

@{
    ViewBag.Title = "Details";
    if (Session["UserId"] == null)
    {
        Response.Redirect("~/home/login");
    }
}
<style>
    .row {
        background-color: rgb(255, 255, 255,0.3);
    }

    .body {
        color: black;
    }

    #fundobotao {
        background-color: transparent;
    }
</style>

<br />
<h2 style="text-align:center">Dados do Aluno</h2>

<hr />
<div class="dl-horizontal">

    <div class="row">
        <div class="col">
            <h5>Dados</h5>
            <br />

            <div class="form-group">
                <label class="control-label col-md-6"><b>Nome do Aluno</b></label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.nomeAluno)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-6"><b>CPF do Aluno</b></label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.cpfAluno)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-6"><b>Sexo</b></label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.sexo)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-6"><b>Data Nascimento</b></label>
                <div class="col-md-10">
                    @{
                        DateTime dataNascimento = Convert.ToDateTime(Model.dataNascimento);
                    }
                    @dataNascimento.ToString("dd/MM/yyyy")
                </div>
            </div>

        </div>
        <div class="col">
            <br />
            <br />

            <div class="form-group">
                <label class="control-label col-md-6"><b>Matrícula</b></label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.matricula)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-6"><b>Responsável</b></label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.nomeResponsavel)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-8"><b>Cpf do Responsável</b></label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.cpfResponsavel)
                </div>
            </div>

        </div>
        <div class="col">
            <br />
            <br />

            <div class="form-group">
                <label class="control-label col-md-6"><b>CEP</b></label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.endereco.cep)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-6"><b>Endereço</b></label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.endereco.descricao)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-6"><b>Número</b></label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.endereco.numero)
                </div>
            </div>
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col">

            <h5>Contatos</h5>
            <br />

            <div class="col-md-10">
                <b>@Html.DisplayFor(model => model.contato.contato1):</b> @Html.DisplayFor(model => model.contato.fone1)
            </div>

            <br />

            <div class="col-md-10">
                <b>@Html.DisplayFor(model => model.contato.contato2):</b> @Html.DisplayFor(model => model.contato.fone2)
            </div>

            <br />

        </div>
        <div class="col">
            <br />
            <br />

            <div class="col-md-10">
                <b>@Html.DisplayFor(model => model.contato.contato3):</b> @Html.DisplayFor(model => model.contato.fone3)
            </div>

            <br />

            <div class="col-md-10">
                <b>@Html.DisplayFor(model => model.contato.contato4):</b> @Html.DisplayFor(model => model.contato.fone4)
            </div>

        </div>
        <div class="col">
            <br />
            <br />

            <div class="col-md-10">
                <b>@Html.DisplayFor(model => model.contato.contato5):</b> @Html.DisplayFor(model => model.contato.fone5)
            </div>
        </div>

    </div>
    <hr />

    <div class="row">

        <div class="col">

            <h4>Dados Matricula</h4>
            <br />

            <div class="form-group">
                <label class="control-label col-md-6"><b>Data da Matrícula</b></label>
                <div class="col-md-10">
                    @{
                        DateTime dataMatricula = Convert.ToDateTime(Model.dataMatricula);
                    }
                    @dataMatricula.ToString("dd/MM/yyyy")
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-6"><b>Data da Saída</b></label>
                <div class="col-md-10">
                    @{
                        string saida = "";
                        DateTime dataSaida = Convert.ToDateTime(Model.dataSaida);
                        DateTime dataAgora = DateTime.Now;
                        if (dataSaida.Year < dataAgora.Year)
                        {
                            saida = "Ainda Ativo";
                        }
                        else
                        {
                            saida = dataSaida.ToString("dd/MM/yyyy");
                        }
                    }
                    @saida
                </div>
            </div>
            <div class="col-md-10">
                <b>Turma:</b> @Html.DisplayFor(model => model.turma.nome)
            </div>
            <br />

        </div>
        <div class="col">

            <br />
            <br />

            <div class="form-group">
                <label class="control-label col-md-6"><b>Benefícios</b></label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.beneficios)
                </div>
            </div>

        </div>
        <div class="col">

            <br />
            <br />

            <div class="form-group">
                <label class="control-label col-md-6"><b>Restrições</b></label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.restricoes)
                </div>
            </div>

        </div>

    </div>
</div>
<br />
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.id }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Retornar", "Index",null, new { @class = "btn btn-light" })
</p>
