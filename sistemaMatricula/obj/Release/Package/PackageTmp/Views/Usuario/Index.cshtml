@model IEnumerable<sistemaMatricula.Models.usuario>

@{
    ViewBag.Title = "Index";
    if (Session["UserId"] == null)
    {
        Response.Redirect("~/home/login");
    }
}

<style>
    .row {
        background-color: rgb(255, 255, 255,0.3);
    }

    .table {
        background-color: rgb(255, 255, 255,0.3);
        color: black;
    }
</style>
<br />
<h2>Minhas Educações</h2>


<p>
    <h3 style="text-align:center"> @Html.ActionLink("ADICIONAR", "Create", null, new { @class = "btn btn-light" })</h3>
</p>
<table class="table">
    <tr>
        <th>
            Nome
        </th>
        <th>
            Usuário
        </th>
        <th>
            Data Criação
        </th>
        <th>
            Senha
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.funcionario.nome)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.login)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.dataCriacao)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.senha)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
        @Html.ActionLink("Detalhes", "Details", new { id = item.id }) |
        @Html.ActionLink("Remover", "Delete", new { id = item.id })
    </td>
</tr>
    }

</table>
